<% provide(:page_title, @post.title) %>
<% provide(:author, "active") %>

<div class="col-lg-12">
    <%= link_to "Edit", edit_authors_post_path(@post), class: 'btn btn-sm btn-warning'  %> 
    <%= link_to "Delete", authors_post_path(@post), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"}  %>
</div>


<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <article>
            <div class="content-detail-title text-center">
                <h2><%= @post.title %></h2>
                <p><%= @post.display_day_published %></p>         
            </div>
            <div class="content-detail-post">
                <p><%= @post.body.html_safe %></p>    
                <p><%= @post.description.html_safe %></p>
            </div>
        </article>
    </div>
</div>
