<% provide(:page_title, "All Posts") %>
<% provide(:author, "active") %>

<div class="row">
    <div class="col-lg-12"> 
        <%= link_to "New Post", new_authors_post_path, class: "btn btn-primary btn-sm" %>
    </div><br /><br />

    <div class="col-lg-12">
        <table class="table table-striped">
            <tr>
                <th>Title</th>
                <th>Action</th>
            </tr>
            <%= render @posts %>
        </table>
    </div>
</div>  

<div>
    <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

